<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/lay_adapterwisata"
    tools:context=".app.main.adapter.WisataAdapter">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_wisata"
        style="@style/clickable"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardMaxElevation="@dimen/dimen_2dp"
        android:layout_margin="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="@dimen/dimen_256dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_gallery"
                        android:layout_width="@dimen/dimen_256dp"
                        android:layout_height="@dimen/dimen_128dp"
                        android:scaleType="centerCrop"></ImageView>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/tag_transparent"
                        android:layout_width="wrap_content"
                        app:contentPadding="@dimen/dimen_4dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:background="@color/tag_transparent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_kategori"
                                android:src="@drawable/ic_logo"
                                android:layout_width="@dimen/dimen_16dp"
                                android:layout_height="@dimen/dimen_16dp"/>
                            <TextView
                                android:id="@+id/tv_kategori"
                                android:layout_marginLeft="@dimen/dimen_4dp"
                                android:text="Wisata Kuliner"
                                android:textColor="@color/white"
                                style="@style/TextInSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_wisata"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Wisata Bulan Api"
                    style="@style/TitleTextOneRow">
                </TextView>
                <WebView
                    android:layout_width="match_parent"
                    android:usesCleartextTraffic="true"
                    android:layout_height="24sp"
                    android:id="@+id/webview"
                    tools:ignore="WebViewLayout" />

                <!--<TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Sucipto Aji Kusuma Negara"
                    android:maxLines="2"
                    style="@style/StandardTextOneRow">
                </TextView>-->
            </LinearLayout>
            <LinearLayout
                android:background="@color/grey_100"
                android:padding="@dimen/dimen_8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:src="@drawable/ic_signs"/>
                <TextView
                    android:id="@+id/tv_jarak"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    style="@style/TextInSubtitle"
                    android:text="45 km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>